source "https://rubygems.org"

# Use a compatible Jekyll version
gem "jekyll", "~> 4.3.4"

# Common plugins used by Jekyll sites (include sitemap)
gem "jekyll-feed", "~> 0.16"
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-sitemap", "~> 1.6"

# Use a minimal theme only if you rely on it (optional)
gem "minima", "~> 2.5"

# Allow bundler to install a modern bundler if needed
gem "bundler", "~> 2.4"
